root = true

[*.{adoc,bat,groovy,html,java,js,json,md,properties,sh,sql,svg,txt,vue,xml,xsd,yml}]
charset = utf-8
end_of_line = lf

[*.{groovy,java,xml,xsd}]
indent_style = tab
indent_size = 4
continuation_indent_size = 8

[*.{js,vue}]
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{*.json,*.yml,Dockerfile}]
indent_style = space
indent_size = 2
